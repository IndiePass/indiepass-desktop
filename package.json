{
  "name": "indigenous-desktop",
  "productName": "Indigenous",
  "version": "2.0.0-alpha",
  "description": "An IndieWeb desktop application",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "forge": "electron-forge",
    "watch-styles": "sass scss/app.scss:css/app.css --watch",
    "compile-styles": "sass scss/app.scss:css/app.css --no-source-map --style compressed",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": "https://github.com/marksuth/indigenous-desktop",
  "keywords": [
    "Electron",
    "IndieWeb",
    "Indigenous"
  ],
  "author": "marksuth",
  "license": "GPL-3.0",
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.61",
    "@electron-forge/maker-deb": "^6.0.0-beta.61",
    "@electron-forge/maker-dmg": "^6.0.0-beta.61",
    "@electron-forge/maker-rpm": "^6.0.0-beta.61",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.61",
    "@electron-forge/maker-zip": "^6.0.0-beta.61",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.61",
    "clean-css": "^5.2.0",
    "electron": "^15.0.0",
    "sass": "1.42.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.4",
    "bootstrap": "^5.1.1",
    "dayjs": "^1.10.7",
    "electron-context-menu": "^3.1.1",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.0.1",
    "electron-window-state": "^5.0.3",
    "is-in-viewport": "^3.0.4",
    "jquery": "^3.6.0",
    "magnific-popup": "^1.1.0",
    "mousetrap": "^1.6.5",
    "pace-js": "^1.2.4",
    "tooltipster": "^4.2.8"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "images/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "indigenous_desktop"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "background": "./images/dmg-background.png",
            "format": "ULFO"
          }
        }
      ]
    }
  }
}
